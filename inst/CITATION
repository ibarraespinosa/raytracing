citHeader("To cite raytracing in publications use at least the first, if not both:")

citEntry(entry = "article",
   title          = "TITLE NAME",
   journal		    = "JOURNAL NAME",
   author         = personList(person("Amanda", "Rehbein"),
                    person("Tercio", "Ambrizzi"),
                    person("Sergio", "Ibarra-Espinosa"),
                    person("Livia M. M.", "Dutra")),
   year           = "2020",
   url            = "URL",
   doi            = "DOI",

   textVersion  =
   paste("Rehbein, A., Ambrizzi, T., Ibarra-Espinosa, S., Dutra, L. M. M.: TITULO DO ARTIGO, Nome do Journal, VOL, PAGi-PAGf, DOI, 2020.")
)

citation(auto = meta)

citFooter("Thanks")
